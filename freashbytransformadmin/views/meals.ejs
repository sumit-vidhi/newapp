<% include layouts/header %>
<% include layouts/leftbar %>
<section id="main-content">
	<section class="wrapper">	
	<div class="row">
		<div class="col-md-6"></div>
		<div class="col-md-6" style="margin-top: 20px;"><a href="<%= SITE_URL %>admin/addmeal" title="Add New User" class="btn btn-success btn-sm pull-right">Add New Meal</a>	</div>
	</div>	
	<% if (errors.length > 0) { %>
      <div class="alert alert-danger"><%= errors %></div>
    <% } %>
	<% if (success.length > 0) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
	<p>&nbsp;</p>
	<div class="row">
			<div class="col-sm-12">
				<section class="panel">
	<table id="editable" class="table table-striped table-bordered table-hover  dataTable" role="grid" aria-describedby="editable_info">
		<thead>
			<tr>
				<th>Meal Name</th>
				<th>Price</th>
				<th>Description</th>
				<th>Created date</th>
				<th>Control</th>
	  		</tr>
		</thead>
	
</table>
</section>
</div>
</div>	
</section>
<script type="text/javascript">
$(document).ready(function() {
	$('#editable').dataTable( {
		"processing": true,
		"serverSide": true,
		oLanguage: {
        sProcessing: "<img src='/img/loader.png'>"
        },
		"iDisplayLength":25,
		"aaSorting": [],
		"columnDefs": [ { "targets": 4, "orderable": false,"sClass": "a-right" } ],
		"ajax": "meals_ajax"
	} );


} );
function view(){
    $(".viewajax").colorbox();
}

function confirmDelete() {
	if(!confirm("Are you sure you want to delete this meal?")) {
		return false;
	}
	else {
		return true;
	}
}

function addNewUser() {
	location.href="add-admin-user";
	return false;
}

</script>
<% include layouts/footer %>