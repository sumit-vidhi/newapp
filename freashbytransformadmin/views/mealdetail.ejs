<div class="container" style="width:800px;height:600px;">
		<div class="card">
			<div class="container-fliud">
                    <ul class="nav nav-tabs">
                            <li class="active" id="header-tab1"><a href="javascript:void(0)" id="tab1" class="tabs">Details</a></li>
                            <li id="header-tab2"><a href="javascript:void(0)" id="tab2 " class="tabs">Ingredients</a></li>
                            <li id="header-tab3"><a href="javascript:void(0)"id="tab3" class="tabs">Nutrition</a></li>
                          
                          </ul>
				<div class="wrapper tab1 row content" >
					<div class="preview col-md-6">
                            <% if (imagedata.length > 0) { %>
						<div class="preview-pic tab-content" style="height:180px;">
                                <%
                                for(var i = 0; i < imagedata.length; i++) {
                                  %>
						 
						  <div class="tab-pane" id="pic-<%= i %>"><img style="width:260px;height:140px;"  src="/uploads/<%= imagedata[i].image %>" /></div>
	
                          <%
                        }
                      %>
                        </div>
                        <%
                    }
                      %>
                        <% if (imagedata.length > 0) { %>
						<ul class="preview-thumbnail nav nav-tabs">
                                <%
                                for(var i = 0; i < imagedata.length; i++) {
                                  %>
                                 
                               

						  <li ><a class="view" id="pic-<%= i %>" data-target="#pic-<%= i %>" data-toggle="tab"><img style="width:60px;height:40px;" src="/uploads/<%= imagedata[i].image %>" /></a></li>
                          <%
                        }
                      %>
						</ul>
                        <%
                    }
                      %>
					</div>
					<div class="details col-md-6">
						<h3 class="product-title"><%= data.meal_name %></h3>
						
						<p class="product-description"><%= data.description %>.</p>
						<h4 class="price">current price: <span>$<%= data.price %></span></h4>
					
					</div>
                </div>
                
                <div class="wrapper tab2 row content"  style="display:none;">
                     
                             
                        <div class="details col-md-6">
                            <p class="product-description"><%= data.ingredients %>.</p>
                          
                        
                        </div>
                    </div>

                    <div class="wrapper tab3 row content"   style="display:none;" >
                           
                                    <div class="details col-md-6">
                                            <p class="product-description"><%= data.nutrition %>.</p>
                                          
                                        
                                        </div>
                            
                            </div>
                      
			</div>
		</div>
	</div>
    <script type="text/javascript">
        $(document).ready(function() {
        
              $("li #pic-0").trigger("click");
              $(".tabs").on("click",function(){
                var url=$(this).attr("id");
                $(".content").css("display","none");
                $("."+url).css("display","block");
                $("li").removeClass("active");
                $("#header-"+url).addClass("active");
              })
         
        })
            </script>
